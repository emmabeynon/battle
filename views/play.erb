<h1><%= @game.player_1.name%> vs <%= @game.player_2.name %></h1>
<h2>It's <%= @game.current_turn.name %>'s turn.</h2>
<h3> <%= @game.player_1.name%>: <%= @game.player_1.hp %> HP </h3>

<h3> <%= @game.player_2.name %>: <%= @game.player_2.hp %> HP</h3>

<form action="/attack" method="post">
  <input type="submit" value="Attack!">
</form>

<form action="/paralyse" method="post">
  <input type="submit" value="Paralyse!">
</form>

<form action="/poison" method="post">
  <input type="submit" value="Poison!">
</form>

<form action="/sleep">
  <input type="submit" value="Send opponent to sleep!">
</form>

<form action="/heal" method="post">
  <input type="submit" value="Heal">
</form>
