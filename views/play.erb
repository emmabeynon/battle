<h1><%= @game.player_1.name%> vs <%= @game.player_2.name %></h1>

<h2> <%= @game.player_1.name%>: <%= @game.player_1.hp %> HP </h2>

<h2> <%= @game.player_2.name %>: <%= @game.player_2.hp %> HP</h2>

<form action="/attack" method=post>
    <input type="submit" value="Attack!" name="attack_confirmation">
    <% if @attack_confirmation %>
    <p><%= @game.player_1.name%> has attacked <%= @game.player_2.name %>!</p>
    <% end %>
</form>
